{
  "name": "locomotivehouseapi",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "deploy": "wrangler deploy --outdir dist --upload-source-maps --var SENTRY_RELEASE:$(sentry-cli releases propose-version)",
    "dev": "wrangler dev",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx migrate.ts",
    "db:migrate:prod": "tsx migrate-prod.ts",
    "start": "wrangler dev",
    "test": "vitest",
    "cf-typegen": "wrangler types",
    "sentry:sourcemaps": "_SENTRY_RELEASE=$(sentry-cli releases propose-version) && sentry-cli releases new $_SENTRY_RELEASE --org=locomotivehouse --project=locomotivehouse && sentry-cli sourcemaps upload --org=locomotivehouse --project=locomotivehouse --release=$_SENTRY_RELEASE --strip-prefix 'dist/..' dist",
    "postdeploy": "npm run sentry:sourcemaps"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.1.0",
    "@cloudflare/workers-types": "^4.20240512.0",
    "@sentry/cli": "^2.58.4",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "@typescript-eslint/parser": "^7.10.0",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.21.4",
    "eslint-plugin-drizzle": "^0.2.3",
    "postgres": "^3.4.4",
    "tsx": "^4.11.0",
    "typescript": "^5.0.4",
    "vitest": "1.3.0",
    "wrangler": "^4.31.0"
  },
  "dependencies": {
    "@clerk/backend": "^2.28.0",
    "@neondatabase/serverless": "^0.9.3",
    "@sentry/cloudflare": "^10.32.1",
    "drizzle-orm": "^0.30.10",
    "hono": "^4.3.11",
    "svix": "^1.29.0"
  }
}